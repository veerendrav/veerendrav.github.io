---
layout: default
---

<!-- Custom deadlines page layout with dedicated CSS -->
<link rel="stylesheet" href="{{ '/assets/css/deadlines.css' | relative_url }}">

<!-- Critical CSS for ranking badges (inline fallback) -->
<style>
/* Ranking badge base style */
.ranking-badge {
  display: inline-block;
  padding: 3px 8px;
  border-radius: 3px;
  font-size: 11px;
  font-weight: bold;
  margin-right: 8px;
  vertical-align: middle;
}

/* A* ranking - Gold */
.rank-astar { background-color: #FFD700; color: #1a1a1a; border: 1px solid #DAA520; }

/* A ranking - Blue */
.rank-a { background-color: #87CEEB; color: #1a1a1a; border: 1px solid #5DADE2; }

/* B ranking - Gray */
.rank-b { background-color: #D3D3D3; color: #1a1a1a; border: 1px solid #A9A9A9; }

/* Top - New ranking - Green */
.rank-top---new { background-color: #90EE90; color: #1a1a1a; border: 1px solid #32CD32; }

/* Journal rankings - Purple */
.rank-recent-top-tier-ai-journal,
.rank-top-tier-ai-journal { background-color: #E6E6FA; color: #1a1a1a; border: 1px solid #9370DB; }

/* Dark mode overrides */
html.dark-mode .rank-astar,
html[data-theme='dark'] .rank-astar { background-color: #B8860B; color: #ffffff; border: 1px solid #FFD700; }

html.dark-mode .rank-a,
html[data-theme='dark'] .rank-a { background-color: #4682B4; color: #ffffff; border: 1px solid #87CEEB; }

html.dark-mode .rank-b,
html[data-theme='dark'] .rank-b { background-color: #696969; color: #ffffff; border: 1px solid #A9A9A9; }

html.dark-mode .rank-top---new,
html[data-theme='dark'] .rank-top---new { background-color: #2E8B57; color: #ffffff; border: 1px solid #90EE90; }

html.dark-mode .rank-recent-top-tier-ai-journal,
html.dark-mode .rank-top-tier-ai-journal,
html[data-theme='dark'] .rank-recent-top-tier-ai-journal,
html[data-theme='dark'] .rank-top-tier-ai-journal { background-color: #6A5ACD; color: #ffffff; border: 1px solid #9370DB; }
</style>

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {{ content }}
  </article>
</div>
